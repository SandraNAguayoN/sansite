</head>

<body>
  <div style="width: 100%;">
    <%- include('../partials/navbar'); %>
  </div>
  <div id="contenido">
    <h1>
      <%= title %>
    </h1>
    <p>Bienvenido al <%= title %>
    </p>
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-pills w-100">
          <li class="nav-pill active">
            <a class="nav-link">Listado de libros</a>
          </li>
          <li class="nav-pill ml-auto">
            <a class="nav-link active" href="/libros/add">Agregar</a>
          </li>
        </ul>
      </div>
    </div>
    <br>


    <table id="tablaLibros" class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th style="width: 5%;">ID Libro</th>
          <th style="width: 5%;">Número Libro</th>
          <th>Título</th>
          <th>Autor</th>
          <th style="width: 5%;">Categoría</th>
          <th style="width: 5%;">Fecha Publicación</th>
          <th style="width: 5%;">Número Edición</th>
          <th>Argumento</th>
          <th style="width: 8%;">Editar</th>
          <th style="width: 5%;">Eliminar</th>
        </tr>
      </thead>
      <tbody>
        <% if(data.length> 0){ %>

          <% for (var i=0; i < data.length; i++){ %>
            <tr>
              <td style="text-align: center; font-weight: bolder;">
                <%= data[i]._id%>
              </td>
              <td style="text-align: center;">
                <%= data[i].NumeroLibro%>
              </td>
              <td>
                <%= data[i].Titulo%>
              </td>
              <td>
                <%= data[i].Autor%>
              </td>
              <td>
                <%= data[i].Categoria%>
              </td>
              <td>
                <%= data[i].FechaPublicacion%>
              </td>
              <td style="text-align: center;">
                <%= data[i].NoEdicion%>
              </td>
              <td>
                <%= data[i].Argumento%>
              </td>
              <td>&nbsp;&nbsp;
                <a class="btn btn-success edit"
                  href="../libros/update/<%=data[i]._id%>"><span class="fa fa-edit" id="edit"></span></a>
              </td>
              <td>
                <a class="btn btn-danger delete"
                onclick="return confirm('¿Estas seguro que deseas eliminar <%=data[i].Titulo%>?')"
                href="../libros/delete/<%=data[i]._id%>"><span class="fa fa-trash-o" id="delete"></span></a>
              </td>
            </tr>
            <% } %>
              <% } %>
      </tbody>
      <tfoot>
        <tr>
          <th>ID Libro</th>
          <th>Número Libro</th>
          <th>Título</th>
          <th>Autor</th>
          <th>Categoría</th>
          <th>Fecha Publicación</th>
          <th>Número Edición</th>
          <th>Argumento</th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>
      </tfoot>
    </table>
  </div>


  <%- include('../partials/footer'); %>
    <%- include('../partials/script'); %>
</body>
